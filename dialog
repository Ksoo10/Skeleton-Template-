    margin: 0 auto;
    padding: .5rem 2rem 2rem;
}

 button.open-btn,button.close-btn {
    position: relative;
    display: inline-block;
    padding: 10px 20px;
    color: #fff;
    background-color: #5fcf80;
    border: none;
